{% extends "layout.njk" %}

{% block body %}
  <div class="container blog-page">
    <article class="blog-post">
      <h1>{{ blogTitle }}</h1>
      <time datetime="{{ date }}">{{ date | blogDate }}</time>

      <img class="blog-post-image" src="{{ image }}" alt="{{ blogTitle }}" />

      {{ contents | safe }}

    </article>
  </div>
{% endblock %}