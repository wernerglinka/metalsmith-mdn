{
  "name": "metalsmith-mdn",
  "version": "1.0.0",
  "description": "MDN is a Metalsmith plugin that lets you use Nunjucks components in markdown content",
  "type": "module",
  "keywords": [
    "metalsmith-mdn",
    "nunjucks components",
    "metalsmith-plugin",
    "metalsmith",
    "static-site"
  ],
  "main": "lib/index.cjs",
  "module": "lib/index.js",
  "source": "src/index.js",
  "exports": {
    "require": "./lib/index.cjs",
    "import": "./lib/index.js",
    "default": "./lib/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wernerglinka/metalsmith-mdn.git"
  },
  "files": [
    "lib",
    "src"
  ],
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "author": "Werner Glinka (https://glinka.co)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/wernerglinka/metalsmith-mdn/issues"
  },
  "homepage": "https://github.com/wernerglinka/metalsmith-mdn#readme",
  "dependencies": {
    "debug": "^4.4.0",
    "marked": "^15.0.7",
    "nunjucks": "^3.2.4"
  },
  "devDependencies": {
    "assert-dir-equal": "^1.1.0",
    "auto-changelog": "^2.5.0",
    "c8": "^10.1.3",
    "dotenv": "^16.4.7",
    "eslint": "^9.11.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-n": "^17.16.2",
    "metalsmith": "^2.6.3",
    "microbundle": "^0.15.1",
    "mocha": "^11.1.0",
    "prettier": "^3.5.3",
    "release-it": "^18.1.2"
  },
  "peerDependencies": {
    "metalsmith": "^2.5.0"
  },
  "scripts": {
    "changelog": "auto-changelog -u --commit-limit false --ignore-commit-pattern '^((dev|chore|ci):|Release)'",
    "coverage": "npm test && c8 report --reporter=text-lcov > coverage.info",
    "format": "prettier --write \"**/*.{yml,md,js,json}\"",
    "format:check": "prettier --list-different \"**/*.{yml,md,js,json}\"",
    "lint": "eslint --fix .",
    "lint:check": "eslint --fix-dry-run .",
    "release": "npm run build && node -r dotenv/config ./node_modules/.bin/release-it .",
    "release:check": "npm run build && node -r dotenv/config ./node_modules/.bin/release-it . --dry-run",
    "build": "microbundle --target node -f cjs,esm --strict --generateTypes=false --output lib/index.js",
    "prepack": "npm run build",
    "test": "c8 mocha -t 5000",
    "test:debug": "DEBUG=metalsmith-optimize-html:* npm test",
    "test:e2e": "serve -l 3000 test/fixtures"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
